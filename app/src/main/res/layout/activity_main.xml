<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    >

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WrapContentable SwipeRefreshLayout"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        />

    <FrameLayout
        android:id="@+id/button_scrollview_example"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScrollView Example"
            android:textSize="16dp"
            android:textColor="#333333"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/button_listview_example"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ListView Example"
            android:textSize="16dp"
            android:textColor="#333333"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/button_recyclerview_example"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView Example"
            android:textSize="16dp"
            android:textColor="#333333"
            />
    </FrameLayout>
</LinearLayout>
